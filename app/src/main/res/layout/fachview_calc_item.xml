<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/widget_margin"
    android:paddingBottom="@dimen/widget_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/rlRoot">

    <TextView
        android:layout_width="@dimen/subjects_circle"
        android:layout_height="@dimen/subjects_circle"
        android:id="@+id/tvPic"
        android:layout_centerVertical="true"
        android:background="@drawable/subjects_circle"
        android:textSize="20sp"
        android:textColor="@color/primary_text_default_material_dark"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_toRightOf="@id/tvPic"
        android:layout_marginLeft="@dimen/widget_margin_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/tvMark"
        android:layout_alignParentRight="true"/>

</RelativeLayout>