<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appwidget_corners_white"
    android:orientation="vertical"
    android:padding="@dimen/appwidget_margin">

    <!-- TODO: Remove texts -->

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appwidget_corners_primary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_kantidroid" />

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_margin"
            android:text="@string/widget_overview"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/widget_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/widget_margin"
            android:gravity="right"
            android:textColor="@color/primary_text_default_material_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/appwidget_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="3">

        <TextView
            android:id="@+id/widget_pp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/red_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/widget_kont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/green_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/widget_timetable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/timetable"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>