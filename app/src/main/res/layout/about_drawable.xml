<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_flat_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin_large">

    <!-- TODO: Remove development pic -->
    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="@dimen/subjects_circle"
        android:layout_height="@dimen/subjects_circle"
        android:layout_centerVertical="true"
        android:src="@drawable/android" />

    <!-- TODO: Remove development text -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ivPic"
        android:text="Martin Disch"
        android:textColor="@color/primary_text_default_material_light"
        android:textSize="20sp" />

    <!-- TODO: Remove development text -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ivPic"
        android:text="Development" />

</RelativeLayout>