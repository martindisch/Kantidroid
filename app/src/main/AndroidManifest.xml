<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.martindisch.kantidroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.martindisch.kantidroid.ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.martindisch.kantidroid.ui.subjects.ColorPickerDialog"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.martindisch.kantidroid.ui.subjects.EditDialog"
            android:label="@string/subject_edit"
            android:parentActivityName="com.martindisch.kantidroid.ui.main.MainActivity">
            <!-- TODO: Check if back button appears on pre v18 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.martindisch.kantidroid.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.martindisch.kantidroid.ui.fachview.FachViewActivity"
            android:parentActivityName="com.martindisch.kantidroid.ui.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.martindisch.kantidroid.ui.main.MainActivity" />
        </activity>
    </application>

</manifest>
