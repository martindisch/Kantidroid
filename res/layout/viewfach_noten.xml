<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/tvViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arithmetisches Mittel" />

            <TextView
                android:id="@+id/tvViewMathAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zeugnis-Schnitt" />

            <TextView
                android:id="@+id/tvViewRealAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="25sp" />

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotionsfach" />

            <TextView
                android:id="@+id/tvViewPromotionsfach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:text="Note" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:text="Gewichtung" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:text="Datum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7" >

                <TextView
                    android:id="@+id/tvViewNoten"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Def"
                    android:textSize="25sp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/tvViewGewichtung"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Def"
                    android:textSize="25sp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/tvViewDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Def"
                    android:textSize="25sp"
                    android:layout_weight="3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>