<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welchen Schnitt willst du erreichen?" />

            <EditText
                android:id="@+id/etGuessingMark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wie viel zählt die nächste Prüfung?" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <Spinner
                    android:id="@+id/sGuessingRelevance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/relevance_entries"
                    android:minHeight="50dp"
                    android:layout_weight="3" />
                
                <Button 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bGuessingOwnRelevance"
                    android:text="..."
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bGuessingCalculate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Berechnen" />

                <Button
                    android:id="@+id/bGuessingCancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Abbrechen" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>