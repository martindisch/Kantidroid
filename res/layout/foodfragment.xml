<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/tvFoodDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wochentag"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvFoodMensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodDay"
            android:layout_margin="20dp"
            android:text="Mensa"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFoodMensamenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvFoodMensa"
            android:layout_below="@id/tvFoodMensa"
            android:text="Mensamenu" />

        <TextView
            android:id="@+id/tvFoodBodmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodMensamenu"
            android:layout_margin="20dp"
            android:text="Bodmer"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFoodBodmermenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvFoodMensa"
            android:layout_below="@id/tvFoodBodmer"
            android:text="Bodmermenu" />

        <TextView
            android:id="@+id/tvFoodKonvikt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodBodmermenu"
            android:layout_margin="20dp"
            android:text="Konvikt"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFoodKonviktmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvFoodMensa"
            android:layout_below="@id/tvFoodKonvikt"
            android:text="Konviktmenu" />
    </RelativeLayout>

</ScrollView>